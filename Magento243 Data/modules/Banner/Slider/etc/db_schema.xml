<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="banner_slider" resource="default" engine="innodb" comment="Banner Slider">
      <column xsi:type="int" name="id" padding="7" unsigned="false" nullable="false" identity="true" comment="ID" />
      <!-- <constraint xsi:type="primary" referenceId="PRIMARY"/> -->
      <column xsi:type="text" name="image" nullable="true" comment="Image" />
      <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name" />
      <column xsi:type="text" name="description" nullable="false"  comment="Description" />
      <column xsi:type="int" name="status" nullable="false" padding="7" comment="Status" />
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
   
</schema>


