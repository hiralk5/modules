<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="daily_deals" resource="default" engine="innodb" comment="Daily Deals">
      <column xsi:type="int" name="id" padding="7" unsigned="false" nullable="false" identity="true" comment="ID" />
      <!-- <constraint xsi:type="primary" referenceId="PRIMARY"/> -->
      <column xsi:type="text" name="productsku" nullable="true" comment="Product SKU" />
      <column xsi:type="varchar" name="expiredate" nullable="false" length="255" comment="Sale Expire Date" />
      <column xsi:type="text" name="saletext" nullable="false"  comment="Sale Text" />
      <column xsi:type="int" name="status" nullable="false" padding="7" comment="Status" />
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
   
</schema>


